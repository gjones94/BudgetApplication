@model BudgetApp.ViewModels.BudgetViewModels.BudgetVM

<div>
    <hr class="text-theme" style="height: 2px"/>
    <div class="row">
        <div class="col-md-9 col-12">
            <form id="form-monthly-savings" asp-action="Edit">
                <div class="row">
                    <label asp-for="@Model.MonthlySavingsGoal" class="text-theme control-label h5"></label>
                    <div class="col-md-3 col-4">
                        <input type="hidden" asp-for="@Model.ReturnUrl" />
                        <input type="hidden" asp-for="@Model.BudgetId" />
                        <input asp-for="@Model.MonthlySavingsGoal" class="form-control disabled-input savings-input" disabled />
                        <span asp-validation-for="@Model.MonthlySavingsGoal" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 col-8">
                        <button type="button" class="btn btn-theme btn-edit-save col-md-3 col-4 mx-1">Edit</button>
                        <button type="reset" class="btn btn-theme btn-cancel col-md-3 col-4 mx-1" style="display:none">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>